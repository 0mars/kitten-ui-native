{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "target": "esnext",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "paths": {
      "@src/*": ["./src/*"],
      "@kitten/*": ["./node_modules/react-native-ui-kitten/*"]
  },
  "exclude": [
    "./node_modules",
    "./babel.config.js",
    "./metro.config.js"
  ],
  "include": [
    "./src/**/*"
  ],
}
